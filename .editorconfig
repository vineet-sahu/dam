# EditorConfig for dam monorepo (Node + React + Workers, all using TypeScript)
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript / JavaScript files
[*.{ts,tsx,js,jsx}]
quote_type = single
max_line_length = 100

# JSON and YAML files (keep 2-space indent)
[*.{json,yml,yaml}]
indent_size = 2
quote_type = double
insert_final_newline = true

# Markdown â€” don't strip trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Configuration files (like .prettierrc, .eslintrc, tsconfig)
[*.{rc,config}]
indent_size = 2

# Python scripts (if any utility scripts exist)
[*.py]
indent_size = 4
indent_style = space

# Makefile or other tab-sensitive files
[Makefile]
indent_style = tab
