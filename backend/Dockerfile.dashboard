# backend/Dockerfile.dashboard
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production && \
    npm cache clean --force

# Copy application code
COPY . .

# Build TypeScript
RUN npm run build

# Expose dashboard port
EXPOSE 3001

# Start Bull Board dashboard
CMD ["npm", "run", "dashboard"]