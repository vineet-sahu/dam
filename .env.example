# .env.example
# Copy this file to .env and update the values

# ======================================
# APPLICATION SETTINGS
# ======================================
NODE_ENV=development
API_PORT=3000

# ======================================
# DATABASE (PostgreSQL)
# ======================================
POSTGRES_USER=damuser
POSTGRES_PASSWORD=dampassword
POSTGRES_DB=dam_db
DB_HOST=localhost
DB_PORT=5432
DB_DIALECT=postgres

# ======================================
# REDIS
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================================
# MINIO OBJECT STORAGE
# ======================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# MinIO Buckets
MINIO_BUCKET_ORIGINALS=originals
MINIO_BUCKET_THUMBNAILS=thumbnails
MINIO_BUCKET_TRANSCODED=transcoded

# ======================================
# JWT AUTHENTICATION
# ======================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ======================================
# FILE UPLOAD LIMITS
# ======================================
# Maximum file size in bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# Allowed file types (comma-separated MIME types)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml
ALLOWED_VIDEO_TYPES=video/mp4,video/mpeg,video/quicktime,video/x-msvideo,video/webm
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain

# ======================================
# WORKER CONFIGURATION
# ======================================
# Number of concurrent jobs per worker instance
WORKER_CONCURRENCY=5
# Maximum retry attempts for failed jobs
WORKER_MAX_RETRIES=3

# ======================================
# FRONTEND
# ======================================
VITE_API_URL=http://localhost:3000

# ======================================
# BULL BOARD DASHBOARD
# ======================================
BULL_BOARD_PORT=3001

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=info
LOG_FORMAT=json

# ======================================
# CORS
# ======================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ======================================
# RATE LIMITING
# ======================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================================
# EMAIL (Optional - for notifications)
# ======================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# ======================================
# MONITORING (Optional)
# ======================================
SENTRY_DSN=
ANALYTICS_ID=